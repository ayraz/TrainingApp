<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="cz.nudz.www.trainingapp.main.ModeSelectionFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/tutorialBtn"
            style="@style/MainScreenButton"
            app:layout_constraintLeft_toRightOf="@+id/trainingBtn"
            app:layout_constraintRight_toLeftOf="@+id/trialBtn"
            android:text="@string/tutorialOptionTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/trialBtn"
            style="@style/MainScreenButton"
            app:layout_constraintLeft_toRightOf="@+id/tutorialBtn"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/trialOptionTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Button
            android:id="@+id/trainingBtn"
            style="@style/MainScreenButton"
            android:text="@string/trainingOptionTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tutorialBtn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>

</layout>
